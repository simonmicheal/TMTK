<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="TMTK.MainMenuItemTemplate"
	xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared">

	<AbsoluteLayout 
		AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
		AbsoluteLayout.LayoutFlags="All"
		Padding="24,0,0,0" 
		VerticalOptions="CenterAndExpand"
		HorizontalOptions="StartAndExpand">

		<Label
			Text="{Binding Icon}"
			Style="{DynamicResource MainMenuIconStyle}"
			HorizontalTextAlignment="Start"
			VerticalTextAlignment="Center" 
			AbsoluteLayout.LayoutBounds="0, 0, 20, 1"
			AbsoluteLayout.LayoutFlags="XProportional, YProportional, HeightProportional"
			/>


        <Label 
			Text="{Binding Name}" 
			Style="{DynamicResource MainMenu_Label_Style}" 
			VerticalTextAlignment="Center" 
			AbsoluteLayout.LayoutBounds="24, 0, 1, 1"
			AbsoluteLayout.LayoutFlags="WidthProportional, HeightProportional"
			/>
	</AbsoluteLayout>

</ContentView>